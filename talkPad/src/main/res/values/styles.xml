<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="TalkPad" />

    <!-- Header -->
    <style name="Header" />
    <!-- Header Button -->
    <style name="Header.Button">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!-- Header Button center -->
    <style name="Header.Button.Center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- Header Button Left -->
    <style name="Header.Button.Left">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!-- Header Button Right -->
    <style name="Header.Button.Right">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" />
    <!-- Toobar Button -->
    <style name="Toolbar.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TalkPad.Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TalkPad.GenButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button -->
    <style name="TalkPad.SquareButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- EditText -->
    <style name="TalkPad.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:textColor">#8c8c8c</item>
        <item name="android:background">@null</item>
    </style>

    <!-- EditText -->
    <style name="TalkPad.LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- EditText Separater -->
    <style name="TalkPad.SignupSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.9dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="TalkPad.LoginSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.9dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- EditText -->
    <style name="TalkPad.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:textColor">#8c8c8c</item>
        <item name="android:background">@null</item>
    </style>
    
    <!-- floatingAction style -->
    <style name="FloatingActionMenuStyle">
		
		
	</style>

</resources>