<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <LinearLayout
            android:id="@+id/parent_color_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="#ff000000"
                android:textColor="#ff000000" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:background="#ffffa500"
                android:textColor="#ffffa500" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:background="#ffff0000"
                android:textColor="#ffff0000" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:background="#ff00ff00"
                android:textColor="#ff00ff00" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <LinearLayout
            android:id="@+id/parent_color_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="#ff0000ff"
                android:textColor="#ff0000ff" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:background="#ff00ffff"
                android:textColor="#ff00ffff" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:background="#ffff00ff"
                android:textColor="#ffff00ff" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:background="#ffffff00"
                android:textColor="#ffffff00" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:tag="5"
            android:text="OK" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:tag="5"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout><!-- From: file:/home/pavelhunko/workspace/TalkPad1/talkPad/src/main/res/layout/dialog_color_picker.xml -->